@model IEnumerable<OrderModel>

<div class="col-lg-12 col-md-12">
    <form class="dash__address-make">
        <br />
        <div class="dash__box dash__box--shadow dash__box--bg-white dash__box--radius u-s-m-b-30">
            <h2 class="dash__h2 u-s-p-xy-20">List Product</h2>
            <div class="dash__table-2-wrap gl-scroll">
                <table class="dash__table-2">
                    <thead>
                        <tr>
                            <th scope="col">Order Code</th>
                            <th scope="col">UserName</th>
                            <th scope="col">Order Date</th>
                            <th scope="col">Order Status</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.OrderCode</td>
                                <td>@item.UserName</td>
                                <td>@item.CreatedDate</td>
                                <td>
                                    @if (item.Status == 1)
                                    {
                                        <span class="text text-success">New Order</span>
                                    }
                                    else
                                    {
                                        <span class="text text-danger">Order Complete</span>
                                    }
                                </td>

                                <td>
                                    <a asp-action="ViewOrder" asp-controller="Order" asp-route-ordercode="@item.OrderCode">View Order</a>
                                    <a asp-action="Delete" asp-controller="Order" asp-route-Id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </form>
</div>


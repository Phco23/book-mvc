@model IEnumerable<CategoryModel>

<div class="col-lg-12 col-md-12">
    <form class="dash__address-make">
        <div>

            <a asp-action="Create" class="btn btn--e-brand-b-2" type="submit">Create new Category</a>
        </div><br />
        <div class="dash__box dash__box--shadow dash__box--bg-white dash__box--radius u-s-m-b-30">
            <h2 class="dash__h2 u-s-p-xy-20">List Category</h2>
            <div class="dash__table-2-wrap gl-scroll">
                <table class="dash__table-2">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Slug</th>
                            <th>Manage</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.Id</th>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.Slug</td>
                                <td>
                                    <a asp-action="Edit" asp-controller="Category" asp-route-Id="@item.Id">Edit</a>
                                    <a asp-action="Delete" asp-controller="Category" asp-route-Id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </form>
</div>

}

@model CategoryModel


<div class="u-s-p-b-60">
    <!--====== Section Intro ======-->
    <div class="section__intro u-s-m-b-60">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section__text-wrap">
                        <h1 class="section__heading u-c-secondary">CREATE CATEGORY</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section Intro ======-->
    <!--====== Section Content ======-->
    <div class="section__content">
        <div class="container">
            <div class="row row--center">
                <div class="col-lg-6 col-md-8 u-s-m-b-30">
                    <div class="l-f-o">
                        <div class="l-f-o__pad-box">
                            <h1 class="gl-h1">CATEGORY INFORMATION</h1>
                            <form class="l-f-o__form" asp-action="Edit" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="u-s-m-b-30">
                                    <label class="gl-label" for="reg-fname">Name *</label>
                                    <input asp-for="Name" class="input-text input-text--primary-style" type="text" id="reg-fname" placeholder="Enter Name" data-val="true" data-val-required="Name is required">
                                    <span asp-validation-for="Name" class="text-danger" />
                                </div>

                                <div class="u-s-m-b-30">
                                    <label class="gl-label" for="reg-description">Description *</label>
                                    <input asp-for="Description" class="input-text input-text--primary-style" type="text" id="reg-description" placeholder="Enter Description" data-val="true" data-val-required="Description is required">
                                    <span asp-validation-for="Description" class="text-danger" />
                                </div>

                                <div class="u-s-m-b-30">
                                    <label class="gl-label" for="reg-description">Slug *</label>
                                    <input asp-for="Slug" class="input-text input-text--primary-style" type="text" id="reg-Slug" placeholder="Enter Slug" data-val="true" data-val-required="Slug is required">
                                    <span asp-validation-for="Description" class="text-danger" />
                                </div>

                                <div class="u-s-m-b-15">
                                    <button class="btn btn--e-transparent-brand-b-2" type="submit">EDIT</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section Content ======-->
</div>


